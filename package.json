{
  "name": "video-party-electron",
  "version": "0.1.0",
  "author": "Randy Uebel <randy.uebel@gmail.com> (http://randyuebel.com/)",
  "license": "MIT",
  "main": "src/main/index.js",
  "productName": "Video Party",
  "homepage": "./",
  "scripts": {
    "build": "NODE_ENV=production npm run build:react && npm run build:electron",
    "build:electron": "electron-packager . --out=dist/osx --platform=darwin --arch=x64 --overwrite --package-manager=yarn --app-bundle-id=com.electron.video-party --prune=true --icon=./public/icon/icon.icns",
    "build:react": "react-scripts build",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "start": "nf start -p 3000",
    "start:electron": "ELECTRON_DEV=1 node src/main/electron-wait-react",
    "start:react": "BROWSER=none react-scripts start",
    "test": "react-scripts test --env=jsdom"
  },
  "babel": {
    "presets": [
      [
        "electron",
        "env",
        {
          "targets": {
            "browser": true
          }
        }
      ],
      "stage-2"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "displayName": true,
          "preprocess": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "gsandf-react",
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^8.0.1",
    "babel-preset-electron": "^1.4.15",
    "babel-preset-env": "^1.2.1",
    "babel-preset-stage-2": "^6.18.0",
    "babel-watch": "^2.0.5",
    "electron-packager": "^9.1.0",
    "eslint": "^4.9.0",
    "eslint-config-gsandf-react": "^0.2.0",
    "foreman": "^2.0.0",
    "react-scripts": "1.0.14"
  },
  "dependencies": {
    "electron": "^1.7.9",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-input-range": "^1.2.1",
    "react-player": "^0.25.0",
    "styled-components": "^2.2.1"
  }
}
